<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:background="@color/splash_bg_color"
        tools:context=".details.Splash">


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center|top"
           android:gravity="center"
           android:layout_marginTop="@dimen/_80sdp"
           android:orientation="vertical">



           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layoutDirection="ltr"
               android:orientation="horizontal">


               <ImageView
                   android:layout_width="@dimen/_35sdp"
                   android:layout_height="@dimen/_35sdp"
                   android:src="@drawable/logo_app"/>

               <androidx.legacy.widget.Space
                   android:layout_width="@dimen/_10sdp"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/poppins"
                   android:textSize="@dimen/_22sdp"
                   android:textColor="@color/white"
                   android:text="Audiozic"/>


           </LinearLayout>



           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/poppins"
               android:textSize="@dimen/_17sdp"
               android:layout_marginTop="@dimen/_30sdp"
               android:textColor="#BEFFFFFF"
               android:textStyle="normal"
               android:gravity="center"
               android:text="Search for Wireless\nheadphones"/>



       </LinearLayout>





        <com.ncorti.slidetoact.SlideToActView
            android:id="@+id/swipe"
            android:layout_height="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/_35sdp"
            app:text="Swipe to access"
            app:text_color="@color/white"
            app:text_size="@dimen/_14sdp"
            app:animation_duration="250"
            app:fontFamily="@font/poppins"
            app:area_margin="@dimen/_7sdp"
            app:icon_margin="@dimen/_1sdp"
            app:slider_reversed="true"
            app:slider_icon_color="@color/splash_bg_color"
            app:outer_color="@android:color/transparent"
            app:slider_icon="@drawable/ic_swipe_back"
            app:slider_locked="false"
            android:background="@drawable/bg_swipe" />


        <RelativeLayout
            android:layout_width="@dimen/_400sdp"
            android:layout_height="@dimen/_420sdp"
            android:layout_gravity="bottom|end"
            android:layoutDirection="ltr">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:translationX="@dimen/_115sdp"
                android:alpha="0.4"
                android:src="@drawable/ic_women" />


        </RelativeLayout>



    </FrameLayout>
</layout>